{
    "name": "dry7/rest-api",
    "authors": [
        {
            "name": "Andrey Shilov",
            "email": "andrey.dry7.shilov@yandex.ru"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "doctrine/orm": "2.7.0",
        "doctrine/migrations": "2.2.1",
        "guzzlehttp/guzzle": "6.5.2",
        "symfony/finder": "^5.1@dev",
        "php-di/php-di": "dev-master",
        "symfony/http-foundation": "^5.1@dev",
        "vlucas/phpdotenv": "^4.1@dev",
        "fzaninotto/faker": "^1.9.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"file_exists('docker-compose.override.yml') || copy('docker-compose.override.yml.dist', '.env');\""
        ]
    }
}
